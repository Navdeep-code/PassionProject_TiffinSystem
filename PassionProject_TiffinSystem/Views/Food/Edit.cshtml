@model PassionProject_TiffinSystem.Models.FoodDto
@{
    ViewBag.Title = "Edit";
}

<p><a href="/Food/Detail">Go back</a></p>
<br />
<h2>Edit Food Item</h2>
<form action="/Food/Update/@Model.FoodID" method="POST" name="myform" style=" border: 1px solid #000; padding: 1em; margin: 1em;">
    <div>
        <label>Food Name:</label> <input type="text" name="ItemName" value="@Model.ItemName" />
    </div>
    <div>
        <label>Food Type:</label>
        <select name="Foodtype" value="@Model.Foodtype">
            <option value="Dessert">Dessert</option>
            <option value="Main Course">Main Course</option>
        </select>
    </div>
    <label>Is the item Vegetarian or Meat?</label>
    <select name="Vegetarian" value="@Model.Vegetarian">
        <option value="Vegetarian">Vegetarian</option>
        <option value="Meat">Meat</option>
    </select>
    <div>
        <input type="submit" value="Update Food" style="background: #0066A2; color: white; border-style: outset; border-color: #0066A2; padding: 0.2em 0.5em; margin-top:1em "/>
    </div>
</form>

